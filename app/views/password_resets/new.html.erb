<div class="container">
<h1>Reset Password</h1>
<p id="notice"><%= notice %></p>
<p>Please enter your email address below and then press "Forgot Password".</p>
	<%= form_tag( url: forgot_password_path ) do  %>

      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= submit_tag "Forgot Password", class: "btn btn-large btn-primary" %>
    <% end %>
</div>