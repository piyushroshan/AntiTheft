<!DOCTYPE html>
<html>
<head>
	<title>AntiTheft</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<b><%= link_to "AntiTheft", root_path, :class=>"navbar-brand" %></b>
			</div>
			<div class="navbar-collapse collapse">
				<ul id="nav navbar-nav navbar-right" class="list-inline right">
					<% if current_user %>
					<li class="dropdown" id="accountmenu"> 
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">My Account<b class="caret"></b></a>

						<ul class="dropdown-menu">

							<li><%= link_to "Edit Profile", edit_user_path %></li>

							<% if current_user.is_admin? %>
							<li><%= link_to "Manage Devices", devices_path  %></li>
							<li><%= link_to "Manage Users", users_path  %></li>
							<% else %>
							<li><%= link_to "My Devices", devices_path  %></li>
							<% end %>
						</ul>

					</li>
					<li>
						<%= link_to "Logout", :logout%>
					</li>
					<% else %>
					<li>
						<%= link_to "Register", signup_path %>
					</li>
					<li>
						<%= link_to "Login", :login %>
					</li>
					<% end %>
				</ul>
			</div> <!--/.navbar-collapse -->
		</div>  
	</div>
	<%= yield %>

</body>
</html>
